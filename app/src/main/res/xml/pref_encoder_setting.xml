<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_encoder_channel_list_titles"
        android:entryValues="@array/pref_encoder_channel_list_values"
        android:key="encoder_channel"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_encoder_channel" />

    <!--<EditTextPreference
        android:key="encoder_fmt"
        android:summary="XXX"
        android:title="@string/pref_encoder_fmt" />-->

    <Preference
        android:key="encoder_frame_rate"
        android:title="@string/pref_encoder_frame_rate" />

    <Preference
        android:key="encoder_level"
        android:title="@string/pref_encoder_level" />

    <Preference
        android:key="encoder_gop_size"
        android:title="@string/pref_encoder_gop_size" />

    <Preference
        android:key="encoder_profile"
        android:title="@string/pref_encoder_profile" />


    <ListPreference
        android:key="encoder_quality"
        android:entries="@array/pref_encoder_quality_list_titles"
        android:entryValues="@array/pref_encoder_quality_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_encoder_quality" />
