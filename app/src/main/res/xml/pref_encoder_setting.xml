    <Preference
        android:defaultValue="true"
        android:key="encoder_qp_max"
        android:title="@string/pref_encoder_qp_max" />
    <ListPreference
        android:defaultValue="true"
        android:key="encoder_rc_mode"
        android:entries="@array/pref_encoder_rc_mode_list_titles"
        android:entryValues="@array/pref_encoder_rc_mode_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_encoder_rc_mode" />
    <ListPreference
        android:defaultValue="false"
        android:key="encoder_width_height"
        android:entries="@array/pref_encoder_width_height_list_titles"
        android:entryValues="@array/pref_encoder_width_height_list_values"
        android:negativeButtonText="@null"
