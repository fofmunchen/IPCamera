<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="@dimen/y40"
    android:minHeight="@dimen/y40"
  	android:descendantFocusability="blocksDescendants">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y40"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView  
		    android:id="@+id/titleimg"  
		    android:layout_width="@dimen/x43"
		    android:layout_height="@dimen/y30"
			android:layout_gravity="center_vertical"
			/>
        <TextView  
		    android:id="@+id/menuname"  
		    android:layout_marginLeft="@dimen/x7"
		    android:layout_width="@dimen/x170"
		    android:layout_height="fill_parent"
		    android:gravity="center_vertical"
			android:layout_gravity="center_vertical"
		    android:textSize="18sp"
		    android:textColor="#4f4f4f"/>
	    <TextView  
		    android:id="@+id/menuimg"  
		    android:layout_width="@dimen/x11"  
		    android:layout_height="@dimen/y12"
		    android:gravity="center_vertical"
		    android:background="@drawable/selector_devicelist_entry"
			android:layout_gravity="center_vertical"
		    android:clickable="true"
		    android:focusable="true"/>
    </LinearLayout>
		
		
</RelativeLayout>