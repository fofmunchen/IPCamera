<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_main_admin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000">
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="@dimen/y48"
    	android:orientation="vertical">
    	<ImageView 
    	    android:id="@+id/img_admin_pic"
    	    android:layout_width="@dimen/x70"
    		android:layout_height="@dimen/y49"
    		android:layout_gravity="center_horizontal"
			android:focusable="true"
			android:clickable="true"
    		android:background="@drawable/admin_head_portrait"/>
        <TextView 
            android:id="@+id/txt_admin_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="HomeCloud"/>
		<TextView
			android:id="@+id/txt_admin_devicenum"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal"
			android:textColor="#fff0f0"
			android:textSize="14sp"
			android:text="1台摄像机"/>
    </LinearLayout>
	<LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="@dimen/y145"
    	android:orientation="vertical">
		<ImageView 
		    android:id="@+id/line1"
		    android:layout_width="@dimen/x240"
			android:layout_height="@dimen/y1"
			android:layout_gravity="center_horizontal"
			android:background="@drawable/admin_line_1"/>
		<ListView 
		    android:id="@+id/list_admin_menulist"
		    android:layout_width="@dimen/x240"
			android:layout_height="wrap_content"
			android:layout_below="@id/line1"
			android:layout_gravity="center_horizontal"
			android:clickable="true"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:cacheColorHint="#00000000"
			android:divider="@drawable/admin_line_2"
			android:dividerHeight="@dimen/y1"
		    />
		<ImageView 
		    android:layout_below="@id/list_admin_menulist"
		    android:layout_width="@dimen/x240"
			android:layout_height="@dimen/y1"
			android:layout_gravity="center_horizontal"
			android:background="@drawable/admin_line_1"/>
	</LinearLayout>
</RelativeLayout>