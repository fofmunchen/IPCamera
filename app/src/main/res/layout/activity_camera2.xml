<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:background="#f4f4f4">

	<LinearLayout
		android:id="@+id/layout_bottom"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/y105"
		android:layout_alignParentBottom="true"
		android:background="#f4f4f4">
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageButton
				android:id="@+id/btn_camera_photo"
				android:layout_width="@dimen/x34"
				android:layout_height="@dimen/y24"
				android:layout_centerInParent="true"
				android:background="@drawable/photograph_normal"
				android:clickable="true"
				android:focusable="true"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageButton
				android:id="@+id/btn_camera_intercom"
				android:layout_width="@dimen/x73"
				android:layout_height="@dimen/y51"
				android:layout_centerInParent="true"
				android:background="@drawable/intercom_normal"
				android:clickable="true"
				android:focusable="true"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageButton
				android:id="@+id/btn_camera_videotape"
				android:layout_width="@dimen/x34"
				android:layout_height="@dimen/y24"
				android:layout_centerInParent="true"
				android:background="@drawable/videotape_normal"
				android:clickable="true"
				android:focusable="true"
				/>
		</RelativeLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/layout_middle"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/y42"
		android:layout_above="@id/layout_bottom"
		android:background="#181b1d">
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageButton
				android:id="@+id/btn_camera_mute"
				android:layout_width="@dimen/x22"
				android:layout_height="@dimen/y15"
				android:layout_centerInParent="true"
				android:background="@drawable/mute_normal"
				android:clickable="true"
				android:focusable="true"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageButton
				android:id="@+id/btn_camera_colletc"
				android:layout_width="@dimen/x22"
				android:layout_height="@dimen/y15"
				android:layout_centerInParent="true"
				android:background="@drawable/collect_normal"
				android:clickable="true"
				android:focusable="true"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageButton
				android:id="@+id/btn_camera_answer"
				android:layout_width="@dimen/x22"
				android:layout_height="@dimen/y15"
				android:layout_centerInParent="true"
				android:background="@drawable/answer_normal"
				android:clickable="true"
				android:focusable="true"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageButton
				android:id="@+id/btn_camera_workingmodel"
				android:layout_width="@dimen/x22"
				android:layout_height="@dimen/y15"
				android:layout_centerInParent="true"
				android:background="@drawable/workingmodel_normal"
				android:clickable="true"
				android:focusable="true"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageButton
				android:id="@+id/btn_camera_fullscreen"
				android:layout_width="@dimen/x22"
				android:layout_height="@dimen/y15"
				android:layout_centerInParent="true"
				android:background="@drawable/fullscreen_normal"
				android:clickable="true"
				android:focusable="true"
				/>
		</RelativeLayout>
	</LinearLayout>

	<RelativeLayout
		android:id="@+id/layout_top"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_above="@id/layout_middle">
		<SurfaceView
			android:id="@+id/surfaceView"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"/>
		<RelativeLayout
			android:id="@+id/layout_middle_title"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/y30">
			<LinearLayout
				android:id="@+id/btn_title_return"
				android:layout_width="@dimen/x90"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:clickable="true"
				android:focusable="true"
				android:focusableInTouchMode="false"
				android:descendantFocusability="blocksDescendants">
				<ImageButton
					android:layout_width="@dimen/x19"
					android:layout_height="@dimen/y13"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="@dimen/x21"
					android:background="@drawable/nav_return"
					android:clickable="false"
					android:focusable="false"
					/>
				<TextView
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:gravity="center_vertical"
					android:layout_gravity="center"
					android:textSize="15sp"
					android:textColor="#000000"
					android:visibility="gone"
					android:text="@string/title_back"/>
			</LinearLayout>
			<TextView
				android:id="@+id/txt_camera_title"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_gravity="center"
				android:textSize="19sp"
				android:textColor="#ffffff"
				android:text="@string/main_tab_title"/>
			<ImageButton
				android:id="@+id/btn_camera_setting"
				android:layout_width="@dimen/x20"
				android:layout_height="@dimen/y15"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/x287"
				android:background="@drawable/nav_setting"
				android:clickable="true"
				android:focusable="true"
				/>
		</RelativeLayout>
		<TextView
			android:id="@+id/txt_camera_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/layout_middle_title"
			android:gravity="center"
			android:layout_centerHorizontal="true"
			android:textSize="13sp"
			android:textColor="#ffffff"
			android:text="2017年5月4日"/>
		<TextView
			android:id="@+id/txt_camera_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/txt_camera_time"
			android:gravity="center"
			android:layout_centerHorizontal="true"
			android:textSize="13sp"
			android:textColor="#ffffff"
			android:text="16:12"/>
		<ImageButton
			android:id="@+id/img_camear_gesture"
			android:layout_width="@dimen/x121"
			android:layout_height="@dimen/y85"
			android:layout_centerInParent="true"
			android:background="@drawable/gesture"
			android:clickable="false"
			android:focusable="false"
			/>
		<TextView
			android:id="@+id/txt_camera_tips"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/img_camear_gesture"
			android:layout_marginTop="@dimen/y14"
			android:gravity="center"
			android:layout_centerHorizontal="true"
			android:textSize="14sp"
			android:textColor="#ffffff"
			android:text="@string/activity_camera_tips"/>
		<LinearLayout
			android:layout_width="@dimen/x35"
			android:layout_height="@dimen/y55"
			android:layout_alignTop="@id/txt_camera_time"
			android:layout_marginLeft="@dimen/x280"
			android:background="@drawable/definition"
			android:orientation="vertical">
			<TextView
				android:id="@+id/txt_camera_resolution"
				android:layout_width="wrap_content"
				android:layout_height="0dip"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				android:gravity="center"
				android:clickable="true"
				android:focusable="true"
				android:textSize="14sp"
				android:textColor="#ffffff"
				android:text="超清"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="0dip"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				android:gravity="center"
				android:clickable="true"
				android:focusable="true"
				android:textSize="14sp"
				android:textColor="#ffffff"
				android:text="高清"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="0dip"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				android:gravity="center"
				android:clickable="true"
				android:focusable="true"
				android:textSize="14sp"
				android:textColor="#ffffff"
				android:text="普清"/>
			<TextView
				android:id="@+id/txt_camera_auto"
				android:layout_width="wrap_content"
				android:layout_height="0dip"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				android:gravity="center"
				android:clickable="true"
				android:focusable="true"
				android:textSize="14sp"
				android:textColor="#21a7ee"
				android:text="自动"/>
		</LinearLayout>
		<ImageButton
			android:id="@+id/btn_camera_round"
			android:layout_width="@dimen/x21"
			android:layout_height="@dimen/y15"
			android:layout_marginLeft="@dimen/x12"
			android:layout_marginTop="@dimen/y217"
			android:background="@drawable/view_round_normal"
			android:clickable="true"
			android:focusable="true"
			/>
		<ImageButton
			android:id="@+id/img_camear_signal"
			android:layout_width="@dimen/x14"
			android:layout_height="@dimen/y8"
			android:layout_marginLeft="@dimen/x297"
			android:layout_alignBottom="@id/btn_camera_round"
			android:background="@drawable/signal_3"
			/>
		<TextView
			android:id="@+id/txt_camera_speed"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/img_camear_signal"
			android:layout_alignBottom="@id/btn_camera_round"
			android:textSize="13sp"
			android:textColor="#ffffff"
			android:text="99K/S"/>
	</RelativeLayout>
</RelativeLayout>