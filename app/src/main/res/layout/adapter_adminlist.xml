<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="@dimen/y18" 
    android:minHeight="@dimen/y18" 
  	android:descendantFocusability="blocksDescendants">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x12"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView  
		    android:id="@+id/titleimg"  
		    android:layout_width="@dimen/x16"  
		    android:layout_height="@dimen/y11"
		    android:gravity="center"
		    android:background="@drawable/admin_richscan" />
        <TextView  
		    android:id="@+id/menuname"  
		    android:layout_marginLeft="@dimen/x7"
		    android:layout_width="@dimen/x181"  
		    android:layout_height="@dimen/y29"
		    android:gravity="center_vertical"  
		    android:textSize="17sp"  
		    android:textColor="#ffffff"/>  
	    <TextView  
		    android:id="@+id/menuimg"  
		    android:layout_width="@dimen/x11"  
		    android:layout_height="@dimen/y12"
		    android:gravity="center_vertical"
		    android:background="@drawable/admin_enter_normal" 
		    android:clickable="true"
		    android:focusable="true"/>
    </LinearLayout>
		
		
</RelativeLayout>